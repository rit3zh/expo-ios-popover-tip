{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "push": true,
    "pushTags": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": false,
    "autoGenerate": true,
    "preRelease": false
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "perf", "section": "âš¡ Performance Improvements" },
          { "type": "revert", "section": "âª Reverts" },
          { "type": "docs", "section": "ğŸ“š Documentation" },
          { "type": "style", "section": "ğŸ’„ Styles" },
          { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
          { "type": "test", "section": "âœ… Tests" },
          { "type": "build", "section": "ğŸ“¦ Build System" },
          { "type": "ci", "section": "ğŸ‘· CI/CD" },
          { "type": "chore", "section": "ğŸ”§ Maintenance" },
          { "type": "breaking", "section": "ğŸ’¥ Breaking Changes" }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# ğŸ“‹ Changelog\n\nAll notable changes to this project will be documented in this file.\n\n",
      "ignoreRecommendedBump": false,
      "strictSemVer": false
    }
  },
  "hooks": {
    "after:bump": "echo 'Version bumped to ${version}'",
    "after:release": "echo 'Successfully released ${name} v${version}'"
  }
}
